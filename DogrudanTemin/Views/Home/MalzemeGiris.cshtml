

@using DogrudanTemin.Models
@model DogrudanTemin.ViewModels.MalzemeViewModel
@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Fonts -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">

    <link rel="stylesheet" href="css/style.css">

    <link rel="icon" href="Favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/Custom.css" rel="stylesheet" />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .tablolar th {
            font-size: 12px
        }
    </style>
    <title>Malzeme Girişi</title>
</head>
<body>



    <main class="login-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Veri Girişi</div>
                        <div class="card-body">

                            @using (Html.BeginForm("MalzemeGiris", "Home", FormMethod.Post))
                            {
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Malzeme Cinsi</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.Malzeme.MalzemeCinsi, new { @class = "form-control", required = "true" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Malzeme Özelliği</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.Malzeme.MalzemeOzellikleri, new { @class = "form-control", required = "true" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Miktarı</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.Malzeme.Miktari, new { @class = "form-control", type = "number", required = "true" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Ölçü Birimi</label>
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(x => x.Malzeme.OlcuBirimi, new SelectList(new List<string>
                                        {
                                            "Adet",
                                            "Paket",
                                            "Kutu"
                                        }), new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">KDV Oranı %</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.Malzeme.KdvOrani, new { @class = "form-control", type = "number", required = "true" })
                                    </div>
                                </div>
                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        Kaydet
                                    </button>
                                </div>
                            }




                            <div style="margin-top: 10px; padding: 10px;" class="container tablolar">
                                <table class="table table-light">
                                    <tr>
                                        <th colspan="7" style="text-align: center; font-size:20px">Malzeme Listesi</th>
                                    </tr>
                                    <tr>
                                        <th>Sayı</th>
                                        <th>Malzeme Cinsi</th>
                                        <th>Malzeme Özelliği</th>
                                        <th>Miktarı</th>
                                        <th>Ölçü Birimi</th>
                                        <th style="text-align: center">KDV Oranı</th>
                                        <th style="text-align: center">#</th>
                                    </tr>
                                    @{ var sayi = 0;}
                                    @foreach (var i in Model.Malzemeler)
                                    {
                                        sayi++;
                                        <tr>
                                            <td>@sayi</td>
                                            <td>@i.MalzemeCinsi</td>
                                            <td>@i.MalzemeOzellikleri</td>
                                            <td>@i.Miktari</td>
                                            <td>@i.OlcuBirimi</td>
                                            <td style="text-align: center">@i.KdvOrani</td>
                                            <td style="text-align: center">@Html.ActionLink("Sil", "Sil", "", new { @id = @i.ID }, new { @class = "btn btn-danger" })</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>



</body>
</html>