

@using DogrudanTemin.Models
@model DogrudanTemin.ViewModels.MalzemeViewModel
@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">

    <link rel="icon" href="Favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

    <link href="~/Content/Custom.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    
    <style>
        .tablolar th {
            font-size: 12px
        }

        .borderless li {
            border: 0 none;
        }
    </style>
    <title>Malzeme Girişi</title>
</head>
<body>
    <main class="login-form">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Veri Girişi</div>
                        <div class="card-body">

                            @using (Html.BeginForm("MalzemeGiris", "Home", FormMethod.Post))
                            {
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Malzeme Cinsi</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.Malzeme.MalzemeCinsi, new { @class = "form-control", required = "true" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Malzeme Özelliği</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.Malzeme.MalzemeOzellikleri, new { @class = "form-control", required = "true" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Miktarı</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.Malzeme.Miktari, new { @class = "form-control", type = "number", required = "true" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">Ölçü Birimi</label>
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(x => x.Malzeme.OlcuBirimi, new SelectList(new List<string>
                                        {
                                            "Adet",
                                            "Paket",
                                            "Kutu"
                                        }), new { @class = "form-control" })
                                    </div>

                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#exampleModalCenter">
                                            Ekle
                                        </button>
                                    </div>

                                </div>



                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-md-right">KDV Oranı %</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.Malzeme.KdvOrani, new { @class = "form-control", type = "number", required = "true" })
                                        <hr />
                                        <div class="col-md-12">
                                            @*@Html.ActionLink("Ekle","MalzemeGiris",new {type="submit"},new {@class="btn btn-danger"})*@
                                            <input class="btn btn-success" type="submit" value="Ekle" />
                                        </div>
                                    </div>
                                </div>
                            }




                            <div style="margin-top: 10px; padding: 10px;" class="container tablolar">
                                <table class="table table-light">
                                    <tr>
                                        <th colspan="7" style="text-align: center; font-size:20px">Malzeme Listesi</th>
                                    </tr>
                                    <tr>
                                        <th>Sayı</th>
                                        <th>Malzeme Cinsi</th>
                                        <th>Malzeme Özelliği</th>
                                        <th>Miktarı</th>
                                        <th>Ölçü Birimi</th>
                                        <th style="text-align: center">KDV Oranı</th>
                                        <th style="text-align: center">#</th>
                                    </tr>
                                    @{ var sayi = 0;}
                                    @foreach (var i in Model.Malzemeler)
                                    {
                                        sayi++;
                                        <tr>
                                            <td>@sayi</td>
                                            <td>@i.MalzemeCinsi</td>
                                            <td>@i.MalzemeOzellikleri</td>
                                            <td>@i.Miktari</td>
                                            <td>@i.OlcuBirimi</td>
                                            <td style="text-align: center">@i.KdvOrani</td>
                                            <td style="text-align: center">@Html.ActionLink("Sil", "Sil", "", new { @id = @i.ID }, new { @class = "btn btn-danger" })</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">

                    <div class="card">
                        <div class="card-header">
                            Doğrudan Alım Bilgileri
                        </div>
                        <div class="card-body" style="text-align: center;">

                            <ul class="list-group">
                                <div class="borderless">
                                    <div class="alert alert-info">
                                        <h5>Dosya Numarası</h5>
                                    </div>
                                    <input type="" value="2020/1" class="form-control" />
                                    <hr />
                                    <div class="alert alert-info">
                                        <h5>Açıklama</h5>
                                    </div>
                                    <input type="" value="Kırtasiye Malzemesi Alımı" class="form-control" />
                                    <br />
                                </div>
                            </ul>
                        </div>
                    </div>
                    <hr />
                    <div class="card">
                        <div class="card-header">
                            Sayfalar
                        </div>
                        <div class="card-body" style="text-align: center;">

                            <ul class="list-group">
                                <div class="borderless">
                                    <li class="list-group-item"><button class="btn btn-danger">Yaklaşık Maliyet Cetveli </button></li>
                                    <li class="list-group-item"><button class="btn btn-warning">Piyasa Araştırma Tutanağı</button></li>
                                    <li class="list-group-item"><button class="btn btn-info">İhale Onay Belgesi</button></li>
                                    <li class="list-group-item"><button class="btn btn-primary">Muayene Kabul Tutanağı</button></li>
                                </div>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>



    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Ölçü Birimi Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("OlcuBirimiEkle", "Home", FormMethod.Post))
                {
                    <div class="modal-body">
                        @Html.TextBoxFor(x => x.OlcuBirimleri.OlcuBirimAdi, new { @class = "form-control", required = "true" })
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                        <button type="submit" class="btn btn-success">Ekle</button>
                        
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>